{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "hc3-quickapp-manager",
  "version": "0.1.7",
  "identifier": "com.hc3quickappmanager.app",
  "build": {
    "frontendDist": "../src",
    "beforeDevCommand": "",
    "beforeBuildCommand": ""
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "HC3 QuickApp Manager",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "signingIdentity": "-"
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDZEMzAzN0RFRTU3RTBCMDEKUldRQkMzN2wzamN3YlJ3TnU4d3VTMGhmZ251dHdMY1RkSUpTKzl3V2gyY29oQUczYXlJamlxQmoK",
      "endpoints": [
        "https://github.com/jangabrielsson/QuickAppManager/releases/latest/download/latest.json"
      ]
    }
  }
}
